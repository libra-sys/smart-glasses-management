/* login.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  top: 100rpx;
  left: -50rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  padding: 120rpx 0 80rpx;
  position: relative;
  z-index: 1;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  display: block;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 表单区域 */
.form-section {
  flex: 1;
  background: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx 40rpx;
  position: relative;
  z-index: 1;
}

/* Tab切换 */
.tab-bar {
  display: flex;
  position: relative;
  margin-bottom: 48rpx;
  background: #F2F2F7;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #007AFF;
  font-weight: 600;
}

.tab-text {
  font-size: 30rpx;
  color: #8E8E93;
  transition: all 0.3s ease;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  bottom: 8rpx;
  width: 50%;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

/* 表单容器 */
.form-container {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  background: #F2F2F7;
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  height: 96rpx;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.input-field {
  flex: 1;
  font-size: 28rpx;
  color: #000000;
}

.input-field::placeholder {
  color: #C7C7CC;
}

/* 忘记密码 */
.forget-password {
  text-align: right;
  padding: 16rpx 0 32rpx;
}

.forget-password text {
  font-size: 26rpx;
  color: #007AFF;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 16rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  border: none;
  margin-top: 16rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

/* 其他登录方式 */
.other-login {
  margin-top: 48rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.line {
  flex: 1;
  height: 1rpx;
  background: #E5E5EA;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #8E8E93;
}

/* 微信登录 */
.wechat-login-btn {
  width: 100%;
  height: 96rpx;
  background: #FFFFFF;
  border: 2rpx solid #07C160;
  border-radius: 16rpx;
  color: #07C160;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.wechat-icon {
  font-size: 36rpx;
}

.wechat-login-btn:active {
  background: rgba(7, 193, 96, 0.05);
}
