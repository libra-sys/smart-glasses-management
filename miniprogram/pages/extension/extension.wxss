/* 功能组件页面样式 */
.container {
  min-height: 100vh;
  background: #F2F2F7;
}

.page-header {
  background: linear-gradient(135deg, #F093FB 0%, #F5576C 100%);
  padding: 60rpx 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section {
  margin: 30rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.section-count {
  font-size: 24rpx;
  color: #8E8E93;
  background: #F2F2F7;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
}

.plugin-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plugin-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.plugin-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.blue-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.green-bg {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
}

.red-bg {
  background: linear-gradient(135deg, #ff6a00 0%, #ee0979 100%);
}

.purple-bg {
  background: linear-gradient(135deg, #a044ff 0%, #6a3093 100%);
}

.orange-bg {
  background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
}

.cyan-bg {
  background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%);
}

.plugin-icon {
  font-size: 48rpx;
}

.plugin-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.plugin-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.plugin-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.install-btn {
  padding: 12rpx 32rpx;
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
  line-height: 1.5;
}

.install-btn::after {
  border: none;
}
