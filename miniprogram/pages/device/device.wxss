/* device.wxss */
/* 设备管理页面样式 */

/* 基础容器样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background: #F2F2F7;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Arial, sans-serif;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 顶部导航栏样式 */
.top-header {
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 16rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  width: 100%;
  justify-content: space-between;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  flex: 1;
}

.search-btn,
.settings-btn {
  width: 72rpx;
  height: 72rpx;
  background: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.search-btn:active,
.settings-btn:active {
  transform: scale(0.95);
  background: #E5E5EA;
}

/* 主内容区域样式 */
.main-content {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 160rpx;
  overflow-y: auto;
}

/* 绑定设备区域样式 */
.bound-device-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 24rpx;
  display: block;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.device-card {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 28rpx;
  background: #F2F2F7;
  border: 1rpx solid #E5E5EA;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.device-card:active {
  transform: scale(0.98);
  background: #E5E5EA;
}

.device-info {
  width: 100%;
  margin-bottom: 20rpx;
}

.device-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
  display: block;
}

.device-model {
  font-size: 26rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
  display: block;
}

.device-status {
  font-size: 24rpx;
  color: #34C759;
  display: inline-block;
  background: rgba(52, 199, 89, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.unbind-btn {
  padding: 16rpx 32rpx;
  background: rgba(255, 59, 48, 0.1);
  border: 1rpx solid #FF3B30;
  border-radius: 16rpx;
  color: #FF3B30;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.unbind-btn:active {
  background: #FF3B30;
  color: #FFFFFF;
}

.device-controls {
  width: 100%;
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 设备控制区域样式 */
.control-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.control-btn {
  width: 100%;
  padding: 18rpx;
  background: #FFFFFF;
  border: 2rpx solid #007AFF;
  border-radius: 14rpx;
  color: #007AFF;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.control-btn:active {
  background: #007AFF;
  color: #FFFFFF;
}

.ai-toggle-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 16rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

/* 无设备状态样式 */
.no-device-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
}

.no-device-section .icon {
  font-size: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.no-device-section .text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 32rpx;
  display: block;
}

.add-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 20rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

/* 搜索结果区域 */
.search-results-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.search-status {
  font-size: 26rpx;
  color: #8E8E93;
  margin-bottom: 20rpx;
  display: block;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F2F2F7;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.device-item:active {
  transform: scale(0.98);
  background: #E5E5EA;
}

.device-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.device-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.device-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
}

.custom-tag {
  font-size: 20rpx;
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.system-tag {
  font-size: 20rpx;
  color: #34C759;
  background: rgba(52, 199, 89, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.device-item-model {
  font-size: 24rpx;
  color: #8E8E93;
}

.device-system-name {
  font-size: 22rpx;
  color: #34C759;
  font-style: italic;
}

.device-original-name {
  font-size: 22rpx;
  color: #C7C7CC;
  font-style: italic;
}

.device-actions {
  display: flex;
  align-items: center;
}

.tip-text {
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(0, 122, 255, 0.05);
  border-radius: 12rpx;
  text-align: center;
}

.tip-text text {
  font-size: 24rpx;
  color: #007AFF;
}

.device-battery {
  font-size: 22rpx;
  color: #C7C7CC;
  display: block;
}

.connect-btn {
  padding: 16rpx 28rpx;
  background: #007AFF;
  border-radius: 16rpx;
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.25);
  flex-shrink: 0;
  margin-left: 16rpx;
}

.connect-btn:active {
  background: #0051D5;
}

