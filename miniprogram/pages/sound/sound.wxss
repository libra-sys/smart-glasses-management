/* 音效设置页面样式 */
.container {
  min-height: 100vh;
  background: #F2F2F7;
  padding-bottom: 100rpx;
}

.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section {
  margin: 30rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.custom-sound {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #F2F2F7;
  border-radius: 16rpx;
}

.custom-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.custom-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.choose-file-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
  line-height: 1.5;
}

.choose-file-btn::after {
  border: none;
}

.selected-file {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  gap: 12rpx;
}

.file-icon {
  font-size: 32rpx;
}

.file-name {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.remove-btn {
  width: 56rpx;
  height: 56rpx;
  background: #FF3B30;
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 32rpx;
  border: none;
  line-height: 56rpx;
  padding: 0;
  text-align: center;
}

.remove-btn::after {
  border: none;
}

.no-file {
  padding: 32rpx;
  text-align: center;
}

.no-file-text {
  font-size: 26rpx;
  color: #8E8E93;
}

.subsection-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #666666;
  margin: 24rpx 0 16rpx 0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.sound-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.sound-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F2F2F7;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.sound-item.active {
  background: #E3F2FD;
  border: 2rpx solid #007AFF;
}

.sound-name {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.sound-icon {
  font-size: 32rpx;
  color: #007AFF;
  margin-right: 16rpx;
}

.play-btn {
  padding: 8rpx 24rpx;
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
  line-height: 1.5;
}

.play-btn::after {
  border: none;
}

.volume-control {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.volume-icon {
  font-size: 40rpx;
}

.volume-slider {
  flex: 1;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
}

.save-btn::after {
  border: none;
}
