/* model.wxss */
page {
  background-color: #F2F2F7;
}

.container {
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部导航栏 */
.header {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  color: #8E8E93;
  font-size: 28rpx;
  transition: color 0.3s;
}

.tab.active {
  color: #007AFF;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #007AFF;
  border-radius: 2rpx;
}

/* 区域分组 */
.section {
  margin: 30rpx 0;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 40rpx 20rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.section-subtitle {
  font-size: 22rpx;
  color: #8E8E93;
  margin-left: 12rpx;
}

/* 组件列表 */
.component-list {
  background-color: #fff;
}

.component-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #F2F2F7;
  transition: background-color 0.2s;
}

.component-item:last-child {
  border-bottom: none;
}

.component-item:active {
  background-color: #F8F8F8;
}

/* 组件图标 */
.component-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-emoji {
  font-size: 40rpx;
}

/* 组件信息 */
.component-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.component-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 8rpx;
}

.component-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.component-meta {
  display: flex;
  gap: 20rpx;
  margin-top: 8rpx;
}

.meta-item {
  font-size: 20rpx;
  color: #C7C7CC;
}

/* 开关 */
.component-switch {
  transform: scale(0.9);
}

/* 安装按钮 */
.install-btn {
  background-color: #007AFF;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 12rpx 32rpx;
  border-radius: 20rpx;
  border: none;
  line-height: 1;
}

.install-btn::after {
  border: none;
}

/* 已安装徽章 */
.installed-badge {
  color: #34C759;
  font-size: 24rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #C7C7CC;
}

/* 社区组件特殊样式 */
.component-item.community {
  cursor: pointer;
}

.component-item.community:active {
  background-color: #F0F0F0;
}
