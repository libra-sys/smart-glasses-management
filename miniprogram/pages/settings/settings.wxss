/* settings.wxss */
page {
  background-color: #F2F2F7;
}

.container {
  min-height: 100vh;
  background-color: #F2F2F7;
}

/* 顶部导航栏 */
.top-header {
  background-color: #FFFFFF;
  padding: 16rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  background-color: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #007AFF;
  border: none;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
}

.placeholder {
  width: 72rpx;
}

/* 主内容区域 */
.main-content {
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.user-avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.user-avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar-text {
  font-size: 52rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  display: block;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 4rpx;
}

.user-login-type {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 设置区域 */
.settings-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 8rpx 0;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
  transition: all 0.2s ease;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: #F2F2F7;
}

.setting-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.setting-icon {
  font-size: 44rpx;
  margin-right: 20rpx;
}

.setting-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  display: block;
}

.setting-desc {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
}

.setting-status {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 600;
}

.setting-arrow {
  font-size: 40rpx;
  color: #C7C7CC;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 96rpx;
  background: #FFFFFF;
  border: 2rpx solid #FF3B30;
  border-radius: 16rpx;
  color: #FF3B30;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 59, 48, 0.1);
}

.logout-btn:active {
  background: rgba(255, 59, 48, 0.05);
}
