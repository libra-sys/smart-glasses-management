/* 音量控制页面样式 */
.container {
  min-height: 100vh;
  background: #F2F2F7;
  padding-bottom: 120rpx;
}

.page-header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 60rpx 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section {
  margin: 30rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.volume-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.volume-icon-large {
  font-size: 96rpx;
  display: block;
  margin-bottom: 16rpx;
}

.volume-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #007AFF;
}

.volume-label {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #8E8E93;
  margin-top: 16rpx;
}

.master-slider {
  margin: 32rpx 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.control-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F2F2F7;
}

.control-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.item-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.item-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #007AFF;
}

.quick-actions {
  margin: 30rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: none;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #333333;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
}

.save-btn::after {
  border: none;
}
