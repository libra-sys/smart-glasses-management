.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.status-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.init-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(245, 87, 108, 0.4);
}

.info-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  display: block;
  font-size: 24rpx;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: monospace;
}
