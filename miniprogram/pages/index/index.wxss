/**index.wxss**/
/* ========== 全局样式 ========== */
page {
  min-height: 100vh;
  background-color: #F2F2F7;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Arial, sans-serif;
}

.container {
  min-height: 100vh;
  background-color: #F2F2F7;
}

/* ========== 顶部导航栏 ========== */
.top-header {
  background-color: #FFFFFF;
  padding: 16rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.user-avatar-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.2);
  flex-shrink: 0;
}

.user-avatar-text {
  font-size: 42rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.greeting {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  line-height: 1.3;
  display: block;
}

.username {
  font-size: 28rpx;
  color: #8E8E93;
  line-height: 1.3;
  display: block;
  margin-top: 4rpx;
}

.header-buttons {
  display: flex;
  gap: 16rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.icon-btn:active {
  transform: scale(0.95);
  background-color: #E5E5EA;
}

.icon-btn .icon-text {
  font-size: 36rpx;
  color: #007AFF;
  font-weight: 600;
}

/* ========== 主内容区域 ========== */
.main-content {
  padding: 32rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
}

/* ========== 设备状态卡片 ========== */
.device-card {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.device-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.device-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.device-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.3;
  display: block;
}

.device-model {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.3;
  display: block;
  margin-top: 6rpx;
}

.connection-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 100rpx;
  backdrop-filter: blur(10rpx);
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  background-color: #34C759;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(52, 199, 89, 0.8);
}

.status-indicator.connected {
  animation: pulse 2s ease-in-out infinite;
}

.status-indicator.connecting {
  background-color: #FF9500;
  box-shadow: 0 0 8rpx rgba(255, 149, 0, 0.8);
  animation: blink 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1;
    transform: scale(1);
  }
  50% { 
    opacity: 0.6;
    transform: scale(1.1);
  }
}

@keyframes blink {
  0%, 100% { 
    opacity: 1;
  }
  50% { 
    opacity: 0.3;
  }
}

.status-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
}

/* ========== 设备状态卡片网格 ========== */
.device-status {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.status-card {
  background-color: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-icon {
  font-size: 40rpx;
}

.status-value {
  font-size: 38rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.battery-bar-container {
  width: 100%;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 4rpx;
  overflow: hidden;
}

.battery-bar {
  height: 100%;
  background: linear-gradient(90deg, #34C759 0%, #30D158 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.status-detail {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.status-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
}

/* ========== 控制按钮 ========== */
.control-buttons {
  display: flex;
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.control-btn {
  flex: 1;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  color: #FFFFFF;
}

.control-btn:active {
  transform: scale(0.98);
  background-color: rgba(255, 255, 255, 0.3);
}

.control-btn.active {
  background-color: rgba(255, 255, 255, 0.95);
  color: #007AFF;
  border-color: rgba(255, 255, 255, 0.5);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* ========== 无设备连接状态 ========== */
.no-device-section {
  background: linear-gradient(135deg, #8E8E93 0%, #AEAEB2 100%);
  border-radius: 32rpx;
  padding: 80rpx 40rpx;
  margin-bottom: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-device-icon {
  font-size: 120rpx;
  opacity: 0.8;
  margin-bottom: 24rpx;
}

.no-device-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.no-device-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 48rpx;
}

.add-device-from-empty {
  background-color: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
  color: #FFFFFF;
  transition: all 0.2s ease;
}

.add-device-from-empty:active {
  transform: scale(0.98);
  background-color: rgba(255, 255, 255, 0.35);
}

/* ========== 快速功能入口 ========== */
.quick-actions {
  margin-top: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 24rpx;
  display: block;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #E5E5EA;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.action-icon-wrapper {
  width: 104rpx;
  height: 104rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  transition: all 0.3s ease;
}

.primary-bg {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(88, 86, 214, 0.1) 100%);
}

.secondary-bg {
  background: linear-gradient(135deg, rgba(88, 86, 214, 0.1) 0%, rgba(175, 82, 222, 0.1) 100%);
}

.warning-bg {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1) 0%, rgba(255, 159, 10, 0.1) 100%);
}

.info-bg {
  background: linear-gradient(135deg, rgba(90, 200, 250, 0.1) 0%, rgba(100, 210, 255, 0.1) 100%);
}

.action-item:active .action-icon-wrapper {
  transform: scale(1.05);
}

.action-icon {
  font-size: 52rpx;
}

.action-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
  display: block;
}

.action-desc {
  font-size: 24rpx;
  color: #8E8E93;
  line-height: 1.4;
  display: block;
}

/* ========== 响应式适配 ========== */
@media (max-width: 375px) {
  .device-name {
    font-size: 40rpx;
  }
  
  .control-btn {
    padding: 20rpx;
  }
  
  .btn-text {
    font-size: 24rpx;
  }
  
  .action-icon-wrapper {
    width: 88rpx;
    height: 88rpx;
  }
  
  .action-icon {
    font-size: 44rpx;
  }
}
