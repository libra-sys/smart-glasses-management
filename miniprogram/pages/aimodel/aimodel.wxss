/* aimodel.wxss */
page {
  background-color: #F2F2F7;
}

.container {
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部导航栏 */
.header {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #E5E5EA;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000;
}

/* 区域 */
.section {
  margin: 30rpx 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  padding: 0 40rpx 20rpx;
  display: block;
}

/* 模型列表 */
.model-item {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #F2F2F7;
  display: flex;
  align-items: flex-start;
}

.model-item.selected {
  background-color: #F0F9FF;
}

.model-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-emoji {
  font-size: 40rpx;
}

.model-info {
  flex: 1;
  margin-right: 20rpx;
}

.model-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.model-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  margin-right: 12rpx;
}

.model-provider {
  font-size: 24rpx;
  color: #8E8E93;
  padding: 2rpx 12rpx;
  background-color: #F2F2F7;
  border-radius: 8rpx;
}

.model-desc {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
  margin-bottom: 12rpx;
}

.model-status {
  display: flex;
  gap: 8rpx;
}

.status-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #fff;
}

.status-badge.configured {
  background-color: #34C759;
}

.status-badge.enabled {
  background-color: #007AFF;
}

.status-badge.disabled {
  background-color: #8E8E93;
}

.model-status-text {
  font-size: 24rpx;
  color: #FF3B30;
}

/* 操作按钮区域 */
.model-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
}

.config-btn,
.select-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 1.2;
}

.config-btn {
  background-color: #007AFF;
  color: #fff;
}

.config-btn::after {
  border: none;
}

.select-btn {
  background-color: #F2F2F7;
  color: #000;
}

.select-btn.selected {
  background-color: #34C759;
  color: #fff;
}

.select-btn::after {
  border: none;
}

.model-switch {
  transform: scale(0.8);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: #fff;
  border-radius: 24rpx;
  width: 85%;
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.modal-close {
  font-size: 48rpx;
  color: #8E8E93;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-body {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.form-value {
  font-size: 28rpx;
  color: #000;
  display: block;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #E5E5EA;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #F9F9F9;
}

.form-tips {
  padding: 20rpx;
  background-color: #FFF3CD;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #856404;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 40rpx;
}

.test-btn,
.save-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 1;
}

.test-btn {
  background-color: #F2F2F7;
  color: #000;
}

.save-btn {
  background-color: #007AFF;
  color: #fff;
}

.test-btn::after,
.save-btn::after {
  border: none;
}
